<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_image"
    >

    <Button
        android:id="@+id/btnVessels"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:alpha="0.75"
        android:background="@drawable/button_background"
        android:text="Vessels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPorts"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:alpha="0.75"
        android:background="@drawable/button_background"
        android:text="Ports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVessels" />

    <TextView
        android:id="@+id/txtMartrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MarTrack"
        app:layout_constraintBottom_toTopOf="@+id/btnVessels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnRegion"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:alpha="0.75"
        android:background="@drawable/button_background"
        android:text="Regions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:alpha="0.75"
        android:background="@drawable/button_background"
        android:text="Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPorts"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>